@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
@model Learner
<div class="ms-2 mx-2">
    <h1>Edit</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-asp-controller="Learner" asp-action="Edit" asp-route-id="@Model.LearnerID" method="post" class="mt-3">
        <input type="hidden" asp-for="LearnerID"/>
        <div style="margin-top:7px" class="form-group row">
            <lable asp-for="FirstMidName" class="col-sm-2 col-form-label">FirstMidName</lable>
            <div class=" col-sm-10">
                <input asp-for="FirstMidName" class="form-control" placeholder="First Mid Name" />
            </div>
            <span asp-validation-for="FirstMidName" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <lable asp-for="LastName" class="col-sm-2 col-form-label">LastName</lable>
            <div class=" col-sm-10">
                <input asp-for="LastName" class="form-control" placeholder="LastName" />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <lable asp-for="MajorID" class="col-sm-2 col-form-label">MajorID</lable>
            <div class=" col-sm-10">
                <select asp-for="MajorID" class"custom-select mr-sm-2"
                        asp-items="@ViewBag.MajorID"></select>
            </div>
            <span asp-validation-for="MajorID" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <lable asp-for="EnrollmentDate" class="col-sm-2 col-form-label">EnrollmentDate</lable>
            <div class=" col-sm-10">
                <input asp-for="EnrollmentDate" class="form-control" placeholder="LastName" />
            </div>
            <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <div class=" col-sm-10">
                <button type="submit" class="btn btn-primary">Edit</button>
            </div>
        </div>
    </form>
</div>